                                                                                        </option>
                                                                                        {{#each addressUser}}
                                                                                        <option value="{{this._id}}"
                                                                                            style="margin: 1rem 0rem;">
                                                                                            <span
                                                                                                style="font-weight: 800; !important">
                                                                                                {{this.locationName}}</span>
                                                                                            {{this.streetAddress}},{{this.city}},{{this.state}},
                                                                                            {{this.zipCode}}.
                                                                                        </option>
                                                                                        {{/each}}
                                                                                    </select>
                                                                            </div>

                                                                            <div class="modal-footer">
                                                                                <button type="button"
                                                                                    class="btn btn-secondary"
                                                                                    data-dismiss="modal">Close</button>
                                                                                <button type="submit"
                                                                                    class="btn btn-primary">Save</button>
                                                                            </div>
                                                                            </form>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                        </body>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        {{#if data.driverId}}
                                        <div class="col-sm-12">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="driver-detail"
                                                        style="display: flex;align-items: center;justify-content: end;">
                                                        <button type="button" class="btn btn-primary edit-address-btn"
                                                            data-toggle="modal" data-target="#editDrivers"
                                                            data-orderid="{{./data._id}}" style="width: 150px;height: 25px;border-radius: 8px;font-size: 12px;padding: 0px;
                                                                                    margin:5px;">Change Driver
                                                        </button>
                                                    </div>
                                                    <div class="driver-detail">
                                                        <h5 style="font-size: large; color:#080808">Driver Details :-
                                                        </h5>
                                                    </div>
                                                    <div class="driver-detail">
                                                        <b>First Name:</b> {{data.driverId.firstName}}
                                                    </div>
                                                    <div class="driver-detail">
                                                        <b>Last Name:</b> {{data.driverId.lastName}}
                                                    </div>
                                                    <div class="driver-detail">
                                                        <b>Email:</b> {{data.driverId.email}}
                                                    </div>
                                                    <div class="driver-detail">
                                                        <b>Mobile Number:</b> {{data.driverId.mobileNumber}}
                                                    </div>
                                                    <div class="driver-detail">
                                                        <b>Address:</b> {{data.driverId.address1}},
                                                        {{data.driverId.address2}},
                                                        {{data.driverId.city}}, {{data.driverId.state}},
                                                        {{data.driverId.zipCode}}
                                                    </div>
                                                </div>
                                                {{#orderStatus data.orderStatus}}
                                                <a class="button_download" href="{{data.orderPDF}}"
                                                    download="invoice.pdf" target="_blank">
                                                    Download Delivered Order Sheet!
                                                    <span>
                                                        <span></span>
                                                    </span>
                                                </a>
                                                {{/orderStatus}}

                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal fade" id="editDrivers" tabindex="-1" role="dialog"
                                        aria-labelledby="editQuantityModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editQuantityModalLabel">Change
                                                        Driver</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/changeDriver" id="quantityForm" method="post">
                                                        <input type="hidden" id="orderIdInput" name="orderId"
                                                            value="{{data._id}}">
                                                        <input type="hidden" name="isOrderAssign" value="Assigned" />

                                                        <div class="col-sm-12 m-b-30">
                                                            <h4 class="sub-title">Select Driver</h4>
                                                            <table class="table table-bordered">
                                                                <thead>
                                                                    <tr>
                                                                        <th style="width: 20%;">Image</th>
                                                                        <th>Name</th>
                                                                        <th>Mobile Number</th>
                                                                        <th>Select</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    {{#each driver}}
                                                                    <tr>
                                                                        <td
                                                                            style="display: flex;align-items: center;justify-content: center;">
                                                                            <img src="{{this.image}}" alt=""
                                                                                onerror="this.src='{{process.env.BASE_URL}}/assets/images/userImage.png'"
                                                                                style="width: 30%;aspect-ratio: 3/3;object-fit: cover;cover;border-radius: 50%;">

                                                                        </td>
                                                                        <td>
                                                                            <span>{{this.firstName}}
                                                                                {{this.lastName}}</span>
                                                                        </td>
                                                                        <td>
                                                                            {{this.mobileNumber}}
                                                                        </td>
                                                                        <td>
                                                                            <input type="checkbox" name="driverId"
                                                                                value="{{this._id}}">
                                                                        </td>
                                                                    </tr>
                                                                    {{/each}}
                                                                </tbody>
                                                            </table>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Save</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{else}}
                                    <!-- Render something else or leave it blank if data.driverId is not available -->
                                    <!-- For example, show a message -->
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-header table-card-header">
                                                <h5 style="font-size: large; color:#DA2727">Select driver for
                                                    assign
                                                    order :-</h5>

                                            </div>
                                            <div class="card-block">
                                                <div class="dt-responsive table-responsive">
                                                    <table id="basic-btn"
                                                        class="table table-striped table-bordered nowrap text-center">
                                                        <thead>
                                                            <tr>
                                                                <th>Sr.No</th>
                                                                <th>Customer Name</th>
                                                                <th>Mobile Number</th>
                                                                <th>Email</th>
                                                                <th>Driver Image</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {{#each driver}}
                                                            <tr>
                                                                <td>{{inc @index}}</td>
                                                                <td>{{this.firstName}} {{this.lastName}}</td>
                                                                <td>{{this.mobileNumber}}</td>
                                                                <td>{{this.email}}</td>
                                                                <td>
                                                                    <img src="{{this.image}}"
                                                                        alt="this is database user image"
                                                                        onerror="this.src='{{process.env.BASE_URL}}/assets/images/userImage.png'"
                                                                        height="50" width="50">
                                                                </td>

                                                                <td style="padding-top :10px;">
                                                                    <form action="/assignOrder" method="post">
                                                                        <input type="hidden" name="orderId"
                                                                            value="{{../data._id}}" />
                                                                        <input type="hidden" name="driverId"
                                                                            value="{{this._id}}" />
                                                                        <input type="hidden" name="isOrderAssign"
                                                                            value="Assigned" />
                                                                        <button type="submit"
                                                                            class="btn btn-primary edit-address-btn"
                                                                            style="width: 140px;height: 40px;border-radius: 8px;font-size: 12px;padding: 0px;
                                                                                    margin:5px;">Assigned
                                                                            Driver</button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                            {{/each}}

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>footer}}
    </div>
    <script>
        $(document).ready(function () {
            $('.edit-quantity-btn').click(function () {
                var quantity = $(this).data('quantity');
                var orderId = $(this).data('orderid');
                var orderFor = $(this).data('orderfor');

                $('#quantityInput').val(quantity);
                $('#orderIdInput').val(orderId);
                $('#orderForInput').val(orderFor);

            });
        });
        $(document).ready(function () {
            $('.edit-address-btn').click(function () {
                var orderId = $(this).data('orderid');
                $('#orderIdInput').val(orderId);

            });
        });
    </script>
</body>