<style>
    .custom-select-wrapper {
        position: relative;
        user-select: none;
    }

    .custom-select {
        position: relative;
        display: inline-block;
        width: 100%;
    }

    .custom-select__trigger {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 22px;
        font-size: 20px;
        font-weight: 300;
        color: #fff;
        height: 40px;
        line-height: 40px;
        background: #5e72e4;
        cursor: pointer;
    }

    .custom-options {
        position: absolute;
        display: none;
        top: 100%;
        left: 0;
        right: 0;
        border: 2px solid #5e72e4;
        border-top: none;
        background: #fff;
        z-index: 2;
    }

    .custom-option {
        position: relative;
        display: block;
        padding: 0 22px;
        font-size: 18px;
        font-weight: 300;
        color: #333;
        line-height: 40px;
        cursor: pointer;
    }

    .custom-option:hover {
        background: #5e72e4;
        color: #fff;
    }

    .custom-file-upload {
        margin-top: 20px;
    }

    .file-upload-btn {
        background: #5e72e4;
        color: #fff;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }

    #fileName {
        margin-top: 10px;
        font-size: 16px;
    }
</style>
<style>
    .custom-file-upload {
        display: block;
        margin: 20px;
    }

    #fileName {
        margin-left: 10px;
    }

    .custom-file-upload {
        display: block;
        margin: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: fit-content;
        padding: 10px;
        cursor: pointer;
        background-color: #f8f8f8;
        text-align: center;
    }

    #fileName {
        margin-left: 10px;
        font-size: 16px;
        color: green;
    }

    .hidden {
        display: none;
    }
</style>
</head>

