        text-align: center;
    }

    .number {
        display: block;
        font-size: 2em;
        font-weight: bold;
    }

    .label {
        display: block;
    }

    .actions button {
        padding: 10px;
        margin: 10px 5px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

    .actions button:hover {
        background-color: #0056b3;
    }

    .recent-orders h2 {
        border-bottom: 2px solid #eee;
        padding-bottom: 5px;
    }

    .recent-orders ul {
        list-style: none;
        padding: 0;
    }

    .recent-orders li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

    .recent-orders .cancel {
        background-color: #ff4136;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
    }

    .recent-orders .cancel:hover {
        background-color: #ff4136;
    }

    .icon {
        font-size: 1.5em;
    }
</style>


