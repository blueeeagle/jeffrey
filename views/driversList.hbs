<style>
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 120px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .dropdown.active .dropdown-content {
        display: block;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {
        background-color: #f1f1f1;
    }

    .three-dots {
        cursor: pointer;
    }
</style>

<body>
    <div class="theme-loader">
        <div class="ball-scale">
            <div class='contain'>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            {{>header}}
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    {{>sidebar}}
                    <div class="pcoded-content">
                        <div class="pcoded-inner-content">

                            <div class="main-body">
                                <div class="page-wrapper">

                                    <div class="page-header">
                                        <div class="row align-items-end">
                                            <div class="col-lg-8">
                                                <div class="page-header-title">
                                                    <div class="d-inline">
                                                        <h4>Drivers</h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{#if error_msg}}
                                        <div class="alert alert-danger background-danger">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Error!</strong> {{error_msg}}
                                        </div>
                                        {{/if}}
                                        {{#if success_msg}}
                                        <div class="alert alert-success background-success">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Success!</strong> {{success_msg}}
                                        </div>
                                        {{/if}}
                                    </div>
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="card">
                                                    <div class="card-header table-card-header">
                                                        <a href="/addNewDriver" class="btn btn-primary pull-right"
                                                            style="background-color: #FD3E6C;
background-image: linear-gradient(315deg,  0%,white #FD3E6C 110%);margin-left: 10px"><i
                                                                class="icofont icofont-plus"></i>Add Driver</a>

                                                        <h5>Driver List</h5>

                                                    </div>
                                                    <div class="card-block">
                                                        <div class="dt-responsive table-responsive">
                                                            <table id="basic-btn"
                                                                class="table table-striped table-bordered nowrap text-center">
                                                                <thead>
                                                                    <tr>
                                                                        {{!-- <th>User Id</th> --}}
                                                                        <th>Sr.No</th>
                                                                        <th>First Name</th>
                                                                        <th>Last Name</th>
                                                                        <th>Mobile</th>
                                                                        <th>Email</th>
                                                                        <th>User Image</th>
                                                                        <th>Admin Approved</th>
                                                                        <th>Action</th>
                                                                        {{!-- <th>Action</th> --}}
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    {{#each data}}
                                                                    <tr>
                                                                        <td>{{inc @index}}</td>
                                                                        <td>{{this.firstName}}</td>
                                                                        <td>{{this.lastName}}</td>
                                                                        <td>{{this.mobileNumber}}</td>
                                                                        <td>{{this.email}}</td>

                                                                        {{!-- <td>{{this.name}}</td> --}}
                                                                        <td><img src="{{this.image}}"
                                                                                alt="this is database user image"
                                                                                onerror="this.src='{{process.env.BASE_URL}}/assets/images/userImage.png'"
                                                                                height="50" width="50"></td>
                                                                        <td>{{this.isAdminApprove}}</td>
                                                                        <td style="padding-top: 10px;">
                                                                            <div class="dropdown">
                                                                                <div class="three-dots"
                                                                                    onclick="toggleDropdown(this)">
                                                                                    {{!-- &vellip; --}}
                                                                                    <i class="fa fa-ellipsis-h"></i>
                                                                                </div>
                                                                                <div class="dropdown-content"
                                                                                    data-rowid="{{this._id}}"
                                                                                    style="right: 2%;">
                                                                                    <a
                                                                                        href="/editDriver/{{this._id}}">Edit</a>
                                                                                    <button type="button"
                                                                                        class="btn btn-default waves-effect"
                                                                                        data-toggle="modal"
                                                                                        data-target="#deleteRecordModal{{this._id}}">Delete</button>
                                                                                    <button type="button"
                                                                                        class="btn btn-default waves-effect"
                                                                                        data-toggle="modal"
                                                                                        data-target="#approvedModal{{this._id}}">Approved</button>
                                                                                    {{!-- <button data-bs-toggle="modal"
                                                                                        data-bs-target="#deleteRecordModal{{this._id}}">Delete</button>
                                                                                    --}}
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                    <!-- Your modal code -->
                                                                    <div class="modal fade"
                                                                        id="deleteRecordModal{{this._id}}" tabindex="-1"
                                                                        role="dialog">
                                                                        <div class="modal-dialog" role="document">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h4 class="modal-title">Delete
                                                                                        Record
                                                                                    </h4>
                                                                                    <button type="button" class="close"
                                                                                        data-dismiss="modal"
                                                                                        aria-label="Close">
                                                                                        <span
                                                                                            aria-hidden="true">&times;</span>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <h5>Confirmation</h5>
                                                                                    <p>Are you sure you want to delete
                                                                                        this record?</p>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button type="button"
                                                                                        class="btn btn-default waves-effect "
                                                                                        data-dismiss="modal">Cancle</button>
                                                                                    <form action="/deleteDriver"
                                                                                        method="POST">
                                                                                        <input type="hidden" name="id"
                                                                                            value="{{this._id}}" />
                                                                                        <button type="submit"
                                                                                            class="btn btn-primary waves-effect waves-light ">Delete</button>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal fade"
                                                                        id="approvedModal{{this._id}}" tabindex="-1"
                                                                        role="dialog">
                                                                        <div class="modal-dialog" role="document">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h4 class="modal-title">Approved
                                                                                        Profile
                                                                                    </h4>
                                                                                    <button type="button" class="close"
                                                                                        data-dismiss="modal"
                                                                                        aria-label="Close">
                                                                                        <span
                                                                                            aria-hidden="true">&times;</span>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <form action="/approveDrive"
                                                                                        method="POST">
                                                                                        <div class="form-group row">
                                                                                            <label class="col-sm-12"
                                                                                                style="text-align: center;">You
                                                                                                can select</label>
                                                                                            <div class="col-sm-12">
                                                                                                <div class="form-radio"
                                                                                                    style="width: 100%;display: flex;align-items: center;justify-content: center;">

                                                                                                    <div
                                                                                                        class="radio radiofill radio-primary radio-inline">
                                                                                                        <label>
                                                                                                            <input
                                                                                                                type="radio"
                                                                                                                name="isAdminApprove"
                                                                                                                value="true"
                                                                                                                data-bv-field="member">
                                                                                                            <i
                                                                                                                class="helper"></i>Approved
                                                                                                        </label>
                                                                                                    </div>
                                                                                                    <div
                                                                                                        class="radio radiofill radio-primary radio-inline">
                                                                                                        <label>
                                                                                                            <input
                                                                                                                type="radio"
                                                                                                                name="isAdminApprove"
                                                                                                                value="false"
                                                                                                                data-bv-field="member">
                                                                                                            <i
                                                                                                                class="helper"></i>Not
                                                                                                            Approved
                                                                                                        </label>
                                                                                                    </div>

                                                                                                </div>
                                                                                                <span
                                                                                                    class="messages"></span>
                                                                                            </div>
                                                                                        </div>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button type="button"
                                                                                        class="btn btn-default waves-effect "
                                                                                        data-dismiss="modal">Cancle</button>
                                                                                    <input type="hidden" name="id"
                                                                                        value="{{this._id}}" />
                                                                                    <button type="submit"
                                                                                        class="btn btn-primary waves-effect waves-light ">Submit</button>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    {{/each}}
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>footer}}
    </div>
    <script>
        function toggleDropdown(threeDots) {
            var dropdownContent = threeDots.nextElementSibling;
            dropdownContent.parentElement.classList.toggle('active');
        }
    </script>
</body>